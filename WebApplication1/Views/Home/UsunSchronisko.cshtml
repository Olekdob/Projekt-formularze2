@model Schronisko

@{
    ViewData["Title"] = "UsunSchronisko";
}

<h1>Usun Schronisko</h1>

<h3>Na pewno chcesz usunać schronisko?</h3>
<div>
    <h4>Schronisko</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            Miejscowość
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Miejscowosc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ocena)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ocena)
        </dd>
        <dt class="col-sm-2">
            Zdjęcie
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Zdjecie)" width="50" height="50" />
        </dd>
    </dl>
    
    <form asp-action="UsunSchronisko">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Kasuj" class="btn btn-danger" /> |
        <a asp-action="ListaSchronisk">Wróć do listy</a>
    </form>
</div>
